@model UsuarioPwd
@{
    ViewData["Title"] = "Ingrese";
    ViewData["SubTitle"] = "Crear cuenta";
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar al listado" asp-action="Index">Login</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h1 class="h3 text-center">Registro de nuevo usuario</h1>

<form asp-action="Crear">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">@ViewData["Title"]</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo Email -->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo Password -->
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <label asp-for="Password" class="form-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Campo Nombre -->
            <div class="form-floating mb-3">
                <input asp-for="Nombre" placeholder="Nombre" class="form-control" />
                <label asp-for="Nombre" class="form-label"></label>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Selección de Rol -->
            <div class="form-floating mb-3">
                <select class="form-select" asp-for="Rol" asp-items="ViewBag.Rol">
                    <option value="">Seleccione un rol de usuario</option>
                </select>
                <label asp-for="Rol" class="control-label"></label>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <!-- Descripción y enlace -->
            <p class="card-text small">Complete el formulario para crear una nueva cuenta.</p>
            <p class="card-text small text-end">
                <a asp-controller="Auth" asp-action="Login" class="link-primary text-decoration-none">¿Ya tienes cuenta? Inicia sesión</a>
            </p>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a class="btn btn-outline-secondary" asp-action="Index" title="Cancelar">Cancelar</a>
        </div>
    </div>
</form>
