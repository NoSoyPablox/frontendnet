@model Producto

<div class="card h-100">
    <img src="@(Model.ArchivoId == null) ? 'https://placeholder.com/300x200/FFF/999?text=Artículo' : $"
        {ViewBag.Url}/api/archivos/{Model.ArchivoId}")" alt="@Model.Titulo" class="rounded card-img-top"
        data-url="@ViewBag.Url" style="max-height: 200px;">
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Titulo</h5>
        <h5 class="card-text text-danger">@String.Format("{0:C}", Model.Precio)</h5>
        <p class="card-text">
            @foreach (var cat in Model.Categorias!)
            {
                <span class="badge rounded-pill text-bg-warning">@cat.Nombre</span>
            }
        </p>
        <p class="mt-auto card-text text-success fw-semibold small"><i class="bi bi-lightning-fill"></i> Envío gratis
        </p>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary btn-sm" href="#" role="button">Comprar</a>
    </div>
</div>