@model CarritoProducto

@{
    ViewData["Title"] = "Eliminar Producto del Carrito";
    ViewData["SubTitle"] = "Eliminar";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb small">
        <li class="breadcrumb-item"><a class="text-decoration-none" title="Regresar al listado"
                asp-action="Index">Listado</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["SubTitle"]</li>
    </ol>
</nav>

<h4 class="text-center text-danger">@ViewData["Title"]</h4>
<hr />

<p class="text-center text-danger">¿Estás seguro de que deseas eliminar este producto de tu carrito?</p>

<div class="card p-4 mx-auto" style="max-width: 700px;">
    <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
            <img src='@((Model.Producto.ArchivoId == null) ? "https://placehold.co/300x200/FFF/999?text=Artículo" : $"{ViewBag.Url}/api/archivos/{Model.Producto.ArchivoId}")'
                class="img-fluid rounded me-3" style="max-width: 150px;" />
            <div>
                <p class="fw-bold mb-1">@Model.Producto.Titulo</p>
                <p class="text-muted mb-0">Cantidad: @Model.Cantidad</p>
            </div>
        </div>

        <form method="post" asp-action="DeleteProducto" asp-route-id="@Model.ProductoId">
            <div class="d-flex flex-column">
                <a href="@Url.Action("Index", "Carrito")" class="btn btn-outline-secondary mb-2">Cancelar</a>
                <button id="btnEnviar" type="submit" class="btn btn-danger">Eliminar</button>
            </div>
        </form>
    </div>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center mt-3" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}
